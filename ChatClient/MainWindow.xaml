<Window x:Class="ChatClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChatClient"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="577">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="43*"/>
            <ColumnDefinition Width="577*"/>
        </Grid.ColumnDefinitions>
        <Button x:Name="tbConnDiconn" Click="Button_Click" Content="Connect" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Height="41" Width="106" Grid.ColumnSpan="2"/>
        <TextBox x:Name="tbUserName" HorizontalAlignment="Left" Margin="78,10,0,0" TextWrapping="Wrap" Text="Username" VerticalAlignment="Top" Width="489" Height="41" Grid.Column="1"/>
        <TextBox x:Name="tbMessage" KeyDown="tbMessage_KeyDown" HorizontalAlignment="Left" Margin="10,361,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="600" Height="63" Grid.ColumnSpan="2"/>
        <ListBox x:Name="lbChat" HorizontalAlignment="Left" Margin="10,56,0,78" Width="600" Grid.ColumnSpan="2"/>

    </Grid>
</Window>
